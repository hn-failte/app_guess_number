<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.failte.guessnumber">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/gn"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/gn_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GNActivity"
            android:label="@string/main_activity_title"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".BalanceActivity"
            android:label="@string/balance_activity_title"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".RankActivity"
            android:label="@string/rank_activity_title"
            android:launchMode="singleTask"></activity>
    </application>

</manifest>