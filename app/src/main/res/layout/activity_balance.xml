<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BalanceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/balance_tv_state"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:lineHeight="40dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/cadetblue"
            android:textSize="30dp" />

        <Button
            android:id="@+id/balance_bt_showrank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_tv_state"
            android:layout_centerHorizontal="true"
            android:lineHeight="40dp"
            android:text="@string/balance_bt_showrank"
            android:textColor="@color/blue"
            android:textSize="20dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>